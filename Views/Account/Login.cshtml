@model JcoolDevRoom.Models.Admin

@{
    ViewData["Title"] = "Đăng nhập - JcoolDevRoom";
}

<style>
    /* Giữ nguyên phần CSS của bạn */
    .login-section {
        padding: 80px 0;
        background-color: #f8f9fa;
        min-height: calc(100vh - 60px);
        display: flex;
        align-items: center;
    }

    .login-card {
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .login-header {
        background: linear-gradient(135deg, #4e54c8, #8f94fb);
        color: #fff;
        padding: 30px;
        text-align: center;
    }

        .login-header h2 {
            margin: 0;
            font-size: 2rem;
        }

    .login-body {
        padding: 40px;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-control {
        border: none;
        border-bottom: 2px solid #e0e0e0;
        border-radius: 0;
        padding: 10px 0;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            box-shadow: none;
            border-color: #4e54c8;
        }

    .form-control-icon {
        position: relative;
    }

        .form-control-icon i {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            right: 10px;
            color: #999;
        }

    .btn-login {
        background-color: #4e54c8;
        color: #fff;
        border: none;
        padding: 12px 30px;
        border-radius: 50px;
        font-size: 1.1rem;
        font-weight: bold;
        transition: all 0.3s ease;
        width: 100%;
    }

        .btn-login:hover {
            background-color: #3a3f9f;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

    .text-danger {
        color: #dc3545;
        font-size: 0.9rem;
        margin-top: 5px;
    }
</style>

<div class="login-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="login-card">
                    <div class="login-header">
                        <h2>Đăng nhập</h2>
                    </div>
                    <div class="login-body">
                        <form id="loginForm">
                            <div id="validationSummary" class="text-danger"></div>
                            <div class="form-group">
                                <label for="username">Tên đăng nhập</label>
                                <div class="form-control-icon">
                                    <input type="text" class="form-control" id="username" name="username" required>
                                    <i class="fas fa-user"></i>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password">Mật khẩu</label>
                                <div class="form-control-icon">
                                    <input type="password" class="form-control" id="password" name="password" required>
                                    <i class="fas fa-lock"></i>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-login">Đăng nhập</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $('#loginForm').submit(function (e) {
                e.preventDefault();
                var username = $('#username').val();
                var password = $('#password').val();

                $.ajax({
                    url: '/cong-tac-vien-phong-tro-hcm/login',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ username: username, password: password }),
                    success: function (response) {
                        if (response.success) {
                            document.cookie = `JwtToken=${response.token}; path=/; secure; samesite=strict`;
                            window.location.href = '/' + response.collaboratorCode + '/manager/home';
                        } else {
                            $('#validationSummary').text(response.message).show();
                        }
                    },
                    error: function (xhr) {
                        $('#validationSummary').text('Đăng nhập thất bại. Vui lòng thử lại.').show();
                    }
                });
            });
        });
    </script>
}